<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnfifthSong"
        android:layout_width="101dp"
        android:layout_height="57dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="41dp"
        android:text="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnThirdSong" />

    <Button
        android:id="@+id/btnFirstSong"
        android:layout_width="101dp"
        android:layout_height="57dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="125dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songTitle" />

    <Button
        android:id="@+id/btnSecondSong"
        android:layout_width="101dp"
        android:layout_height="57dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="125dp"
        android:text="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songTitle" />

    <Button
        android:id="@+id/btnThirdSong"
        android:layout_width="101dp"
        android:layout_height="57dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="125dp"
        android:text="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songTitle" />

    <Button
        android:id="@+id/btnFourthSong"
        android:layout_width="241dp"
        android:layout_height="58dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFirstSong" />

    <Button
        android:id="@+id/btnSixthSong"
        android:layout_width="211dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="44dp"
        android:text="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFourthSong" />

    <Button
        android:id="@+id/btnSelectSong"
        android:layout_width="347dp"
        android:layout_height="52dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="51dp"
        android:text="Chọn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSixthSong" />

    <TextView
        android:id="@+id/songTitle"
        android:layout_width="240dp"
        android:layout_height="68dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="84dp"
        android:text="Bai hat so : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>